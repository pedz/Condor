<!-- app/views/lpps/show.html.erb -->
<%- @title = "Lpp #{@lpp.name}" -%>
<h2> Lpp: <%= h @lpp.name %></h2>
<h3>Has shipped these filesets</h3>
<table>
  <thead>
    <tr>
      <th>Lpp</th>
      <th>VRMF</th>
    </tr>
  </thead>
  <tbody>
    <%- @lpp.filesets.sort.each do |fileset| -%>
    <tr>
      <td><%= link_to fileset.lpp.name, fileset.lpp %></td>
      <td><%= link_to fileset.vrmf, fileset %></td>
    </tr>
    <%- end -%>
  </tbody>
</table>
