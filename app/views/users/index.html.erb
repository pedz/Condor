<h1>Listing users</h1>

<table>
  <tr>
    <th>Ldap</th>
    <th>Admin</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.ldap_id %></td>
    <td><%=h user.admin %></td>
    <td><%= link_to 'Show', user %></td>
    <% if admin? -%>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <% end -%>
  </tr>
<% end %>
</table>

